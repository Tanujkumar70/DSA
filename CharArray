#include <iostream>

using namespace std;

int main()
{
char a[]={'a','b','c','d','e','\0'};
std::cout << a << std::endl;
char b[]="Hello";
cout<<sizeof(a)<< endl;//check size of a
cout<<b<<endl;
cout<<sizeof(b)<<endl;//check size of b
char c[100];
cin.getline(c,100);//cin.getline use input.
cout<<c<<endl;
char paragraph[1000];
cin.getline(paragraph,1000,'.');
cout<<paragraph;
    return 0;
}
